# ============================================================
# CoinPulse Environment Variables Template
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!
# ============================================================

# Application
SECRET_KEY=your-256-bit-secret-key-here
BASE_URL=https://coinpulse.sinsi.ai
DEBUG=False

# Database
# Development: SQLite (default)
# Production: PostgreSQL (Railway auto-provides DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:5432/coinpulse

# Email Service (SendGrid recommended)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@sinsi.ai
FROM_NAME=CoinPulse

# Upbit API (optional - for trading features)
UPBIT_ACCESS_KEY=your-upbit-access-key
UPBIT_SECRET_KEY=your-upbit-secret-key

# Toss Payments API (for subscription payments)
TOSS_CLIENT_KEY=live_ck_your-client-key-here
TOSS_SECRET_KEY=live_sk_your-secret-key-here

# Server (Railway auto-sets PORT)
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
