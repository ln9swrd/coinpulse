{
  "files.encoding": "utf8bom",
  "files.autoGuessEncoding": false,
  "files.eol": "\r\n",
  "[python]": {
    "files.encoding": "utf8bom",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[javascript]": {
    "files.encoding": "utf8bom",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "files.encoding": "utf8bom"
  },
  "[json]": {
    "files.encoding": "utf8bom",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "editor.formatOnSave": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true
}
