# CoinPulse Environment Configuration
# .env 파일로 복사하여 사용하세요: copy env.example .env

# Server Configuration
CHART_SERVER_PORT=8080
TRADING_SERVER_PORT=8081
SERVER_HOST=0.0.0.0
DEBUG_MODE=true

# Chart Settings
DEFAULT_SYMBOL=KRW-BTC
DEFAULT_INTERVAL=1440
MAX_DATA_COUNT=200
REFRESH_INTERVAL=30000

# Chart Theme
CHART_BACKGROUND_COLOR=#1e1e1e
CHART_TEXT_COLOR=#ffffff

# Technical Indicators (true/false)
ENABLE_MA20=true
ENABLE_MA50=true
ENABLE_MA100=false
ENABLE_MA200=false
ENABLE_BOLLINGER_BANDS=false
ENABLE_VOLUME=true

# Upbit API Keys (optional - for trading features)
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=


